{% extends 'base.html.twig' %}

{% block head %}
    {% include('heads/head_back.html.twig') %}
{% endblock %}

{% block nav %}
    {% include('blog_post/nav.html.twig') %}
{% endblock %}

{% block content %}
    <h1>BlogPost index</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Title</th>
            <th>Slug</th>
            {#<th>Description</th>
            <th>Body</th>#}
            <th>Cover</th>
            <th>CreatedAt</th>
            <th>UpdatedAt</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for blog_post in blog_posts %}
            <tr>
                <td>{{ blog_post.id }}</td>
                <td>{{ blog_post.title }}</td>
                <td>{{ blog_post.slug }}</td>
                {#<td>{{ blog_post.description }}</td>
                <td>{{ blog_post.body }}</td>#}
                <td>{{ blog_post.cover }}</td>
                <td>{{ blog_post.createdAt|date("m/d/Y") }}{#{{ dump(blog_post.createdAt) }}#} </td>
                <td>{{ blog_post.updatedAt|date("m/d/Y") }}{#{{ blog_post.updatedAt ? blog_post.updatedAt|date('Y-m-d H:i:s') : '' }}#}</td>
                <td>
                    <a href="{{ path('blog_post_show', {'id': blog_post.id}) }}">show</a>
                    <a href="{{ path('blog_post_edit', {'id': blog_post.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('blog_post_new') }}">Create new</a>
{% endblock %}

{% block javascripts %}
