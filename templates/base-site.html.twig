{% set asset_base = '/media/' %}

<!DOCTYPE HTML>
<html>
    <head>
        <title>Meloven</title>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
        <!-- Head -->
        {% block head %}{% endblock %}
        {% include('analytics/analyticsHead.html.twig') %}
