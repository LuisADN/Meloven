    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="icon" type="image/png" href="{{ asset('asset/img/favicon.png') }}" />
    {% block head %}

    {% endblock %}
    {% include('heads/head_front_site.html.twig') %}
</head>
<body>
    <div class="mobile-nav">
        <div class="mobile-nav-logo">
            <a href="{{ path('home') }}"><img src="{{ asset('asset/img/svg/logo-desktop.svg') }}" alt="Meloven"></a>
        </div>
        <div class="burger-menu">
            <label>
                <input type='checkbox'>
                <span class='menu'>
                   <span class='hamburger'></span>
                </span>
                <ul>
                    <li><a href="/"><h1 class="logo-burger"><img src="{{ asset('asset/img/svg/logo-desktop.svg') }}" alt="Meloven"></h1></a></li>
                    <li><a href="{{ path('qui_sommes_nous') }}"><li>Qui est Moloven</li></a></li>
                    <li><a href="#"><li>Nos artistes</li></a></li>
                    <li><a href="{{ path('blog') }}"><li>Blog</li></a></li>
                    <li><a href="#"><li>Contact</li></a></li>
                    <li><a href="#" class="btn-discover"><li>Vous êtes un(e) artiste ?</li></a></li>
                    <li>
                        <div class="burger-rs">
                            <h1>Suis-nous sur nos réseaux !</h1>
                            <ul>
                                <li><a href="https://www.facebook.com/Meloven.fr" target="_blank"><img src="{{ asset('asset/img/svg/Facebook.svg') }}" alt="Facebook"></a></li>
                                <li><a href="https://twitter.com/melovenfr" target="_blank"><img src="{{ asset('asset/img/svg/Twitter.svg') }}" alt="Twitter"></a></li>
                                <li><a href="https://www.instagram.com/melovenfr/" target="_blank"><img src="{{ asset('asset/img/svg/Instagram.svg') }}" alt="Instagram"></a></li>
                            </ul>
                        </div>
                    </li>
                </ul>
            </label>
        </div>
    </div>

<!-- Contenu -->
{% block content %}{% endblock %}
{% include('site/footer.html.twig') %}
{% block littlejavascript %}{% endblock %}
</body>
</html>