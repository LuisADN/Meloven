{% extends 'base.html.twig' %}

{% block nav %}
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <a class="navbar-brand" href="#">Navbar</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item active">
                        <a class="nav-link" href="{{ path('home') }}">Accueil <span class="sr-only">(current)</span></a>
                    </li>

                    {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_USER') %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('profil') }}">Mon profil</a>
                        </li>
                    {% else %}
                        {#<a class="nav-link" href="{{ path('forgotpassword') }}">Mot de passe oubli√©</a>#}
                    {% endif %}

                    {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_USER') %}
                        <li class="nav-item">
                            <a class="nav-link" href="/logout">Logout</a>
                        </li>
                    {% else %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('login') }}">Connexion</a>
                        </li>
                    {% endif %}

                </ul>
            </div>
        </nav>
    </header>
{% endblock %}

    {% block content %}
        <div class="container" style="margin-top: 40px">
            <form>
                <div class="form-group">
                    <label for="title">Titre de l'article</label>
                    <input name="title" type="text" class="form-control" id="title" aria-describedby="emailHelp" placeholder="">
                </div>
                <div class="form-group">
                    <label for="description">Description</label>
                    <input name="description" type="text" class="form-control" id="description" aria-describedby="emailHelp" placeholder="">
                </div>
                <div class="form-group">
                    <label for="message">Article</label>
                    <textarea name="message" class="form-control" id="message" id="" cols="30" rows="10"></textarea>
                </div>

                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    {% endblock %}
